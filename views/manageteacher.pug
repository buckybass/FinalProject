extends layout/main
block content
  .row
    .col-md-3
      include ./components/sidebar
      .sidebar
        a(href='/managebook') ข้อมูลปริญญานิพนธ์
        a(href='/managefac') ข้อมูลคณะ
        a.active(href='/manageteacher') ข้อมูลอาจารย์
        a(href='/manageuser') ข้อมูลสมาชิก
    .col-md-7
      .container
        .card.mt-3
          .card-body
            include components/alert
            h1.text-center ข้อมูลอาจารย์ทั้งหมด
            h4 เพิ่มข้อมูลอาจารย์
            form(action="/teacher/create", method="post")
              .d-flex
                input.form-control.form-control-sm(type="text" name="firstname" placeholder="ชื่อ" required)
                div(style="width:5px")
                input.form-control.form-control-sm(type="text" name="lastname" placeholder="นามสกุล" required)
                div(style="width:5px")
                button.btn.btn-success(type="submit") +
            -let=i=0
            table.table.mt-3
              thead
                tr
                  th(scope='col') ลำดับ
                  th(scope='col') ชื่อ
                  th(scope='col') สกุล
                  th(scope='col')
              tbody
                each teachers in teacher
                    tr
                      th(scope='row')=i=i+1
                      td=teachers.firstname
                      td=teachers.lastname
                      td.d-flex
                        a.btn.btn-warning.btn-sm(href="") แก้ไข
                        div(style="width:5px")
                        a.btn.btn-danger.btn-sm(href="") ลบ
