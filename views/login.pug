extends layout/form

block content
    h1.text-center เข้าสู่ระบบ
    include components/alert
    form(action="/login", method="post")
      .form-floating
        input#floatingEmail.form-control(type='email' placeholder='name@example.com' name="email" required)
        label(for='floatingEmail') อีเมล
      .form-floating.mt-3
        input#floatingPassword.form-control(type='password' placeholder='***' name="password" required)
        label(for='floatingPassword') รหัสผ่าน
      .mt-2.text-center
        button.btn.btn-primary เข้าสู่ระบบ
        a.m-3(href="/register") สมัครสมาชิก.
    hr
    .text-center.d-flex.justify-content-evenly
      a.btn.btn-primary(href="/login/facebook") Login with Facebook
      a.btn.btn-primary(href="/login/google") Login with google
