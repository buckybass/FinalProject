html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style.
      body, html {
      height: 100%;
      margin: 0;
      }
      .bg {
      /* The image used */
      background-image: url("https://bestanimations.com/media/books/402238143pretty-book-bench-nature-water-outdoors-animated-gif.gif");
      /* Full height */
      height: 100%;
      /* Center and scale the image nicely */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      }
